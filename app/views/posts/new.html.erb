<h3>新規投稿</h3>
<%= form_with model: @post do |f| %>
  <br><%= f.label :ジャンル %>
  <%= f.select :category, [["勉強", "study"], ["運動", "sport"], ["仕事", "job"], ["美容", "art"], ["暮らし", "bed"], ["その他", "other"]], include_blank: "どの投稿？" %>
  <br><%= f.label :頑張ること %>
  <%= f.text_field :target, :size => 140 %>
  <br><%= f.label :話したいこと %>
  <%= f.text_field :people, :size => 140 %>
  <div class="field">
  </div>
  <%= f.submit "宣言する!" %>
<% end %>
