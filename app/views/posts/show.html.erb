<h1>ナガレボシ</h1>
<h3>投稿詳細</h3>
<div class="post">
  <p><%= @post.people %></p>
  <p><%= @post.created_at %></p>
</div>
<div class="chat-wrapper">
  <p>コメント一覧</p>
  <% @chats.each do |c| %>
    <div>
      <%= c.user.email unless c.user.blank? %>
      <br>
      <%= c.content %>
    </div>
      <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@post, @chat], local: true) do |f| %>
      <%= f.text_area :content %>
      <%= button_tag type: "submit" do %>
        <i class="far fa-chats"></i> コメントする
      <% end %>
    <% end %>
  <% end %>
</div>
<%= link_to "投稿一覧に戻る", posts_path %>
<%= link_to "編集する", edit_post_path(@post.id) %>